{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "voron24_deploy_config",
            "type": "shell",
            "command": "rsync -iahp --exclude=\"variables.cfg\" ./klipper_config/* pi@voron24.local:/home/pi/klipper_config/",
            "problemMatcher": []
        },
        {
            "label": "voron24_deploy_clibration_prints",
            "type": "shell",
            "command": "rsync -iahp ./calibration_prints/* pi@voron24.local:/home/pi/gcode_files/calibration/",
            "problemMatcher": []
        },
        {
            "label": "voron24_restart_klipper",
            "type": "shell",
            "command": "ssh pi@voron24.local 'sudo service klipper restart'",
            "problemMatcher": []
        },
        {
            "label": "Voron2.4 Deploy All & Restart",
            "dependsOrder": "sequence",
            "dependsOn": [
                "voron24_deploy_config",
                "voron24_deploy_clibration_prints",
                "voron24_restart_klipper"
            ],
            "problemMatcher": []
        }
    ]
}